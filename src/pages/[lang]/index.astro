---
import Layout from '../../layouts/Layout.astro';
import { t, getSupportedLocale } from '../../utils/i18n';
import Preload from '../../components/Preload.astro';
import Nav from '../../components/Nav.astro';
import Hero from '../../sections/Hero.astro';

export async function getStaticPaths() {
	return [{ params: { lang: 'es' } }];
}

// Get current locale - this page is specifically for Spanish
const currentLang = getSupportedLocale('es');
---

<Layout
	title={`DevSandoval | ${t(currentLang, 'webDeveloper')}`}
	description={t(currentLang, 'homeDescription')}
	lang={currentLang}>
	<!-- Preloader Logo -->
	<Preload />
	<!-- Navigation -->
	<Nav />
	<!-- Hero Section -->
	<Hero />
	<!-- Main Content -->
</Layout>
